{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "List of notifications",
  "type": "array",
  "items": {
    "description": "Notification",
    "type": "object",
    "properties": {
      "notificationId": {
        "description": "Unique identified for the notification.",
        "type": "string",
        "example": "86bb5f82-452e-49c8-88af-1f321d573960"
      },
      "topicId": {
        "description": "Unique identified for the topic that the notification was sent to.",
        "type": "string",
        "example": "50dca3fc-c37c-4f03-b719-63571333624c"
      },
      "notificationContentType": {
        "description": "Content type of the notification.",
        "type": "string",
        "enum": [
          "application/json",
          "application/xml"
        ]
      },
      "message": {
        "description": "The notification message. JSON or XML as defined by notificationContentType. If this is JSON then it will have been escaped. For details about the structure of this data consult the documentation for the HMRC API that created the notification.",
        "type": "string",
        "example": "{\\\"key\\\":\\\"value\\\"}"
      },
      "status": {
        "description": "Status of the notification.",
        "type": "string",
        "enum": [
          "RECEIVED"
        ]
      },
      "createdDateTime": {
        "description": "ISO-8601 UTC date and time that the notification was created.",
        "type": "string",
        "example": "2020-06-01T10:27:33.613+0000"
      }
    },
    "required": [
      "notificationId",
      "topicId",
      "notificationContentType",
      "message",
      "status",
      "createdDateTime"
    ],
    "additionalProperties": false
  }
}
